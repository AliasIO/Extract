#!/bin/bash

if [[ -z "$SERVER_URL" ]]; then
	echo "$SERVER_URL is empty"

	exit 1
fi

if [[ -z "$SERVER_USER" ]]; then
	echo "$SERVER_USER is empty"

	exit 1
fi

if [[ -z "$SERVER_PASS" ]]; then
	echo "$SERVER_PASS is empty"

	exit 1
fi

set -e

cd "$(dirname "$0")/.."

function process {
	http_code=$(echo $@ | awk '{print $1}')
	ip_address=$(echo $@ | awk '{print $2}')
	url=$(echo $@ | awk '{print $3}')
	response=$(echo $@ | awk '{$1=""; $2=""; $3=""; print}')

	if [[ ! -z "$http_code" ]]; then
		out="url $url"

		out+="\ncongregate $(echo $response | jq -r '.body' | docker run --rm -i alias/congregate 2> /dev/null)"
		out+="\nwappalyzer $(docker run --rm wappalyzer/cli $url 2> /dev/null)"
		out+="\ngeoip $(docker run --rm alias/geoip $ip_address 2> /dev/null)"
		
		echo -e "$out"
	fi
}

export -f process

echo "Requesting unprocessed URL list from server..."

response=$(curl -Lis $SERVER_URL/worker)

status=$(echo "$response" | head -n1 | awk '{print $2}')

if [[ "$status" == "200" ]]; then
	urls=$(echo "$response" | sed -e '1,/^\r$/d')

	IFS=$'\n'

	for url in $urls; do
		echo "Processing $url..."

		docker run --rm alias/aranea -u $url -v --connect-timeout 9 -T9 2> /dev/null | \
			xargs -d '\n' -P1 -l bash -c 'process "$@"' _ | \
			php process.php 
	done
fi
